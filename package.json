{
  "name": "ts-node-starter",
  "version": "1.0.0",
  "description": "A starter app for node backends, utils, workers and playgrounds",
  "main": "lib/app.js",
  "scripts": {
    "test-w": "npm run jest -- --watchAll",
    "prestart": "npm run build",
    "start": "node lib/bootstrappedApp",
    "start-w": "ts-node-dev --inspect=`if [ -z \"${DEBUG_PORT}\" ]; then echo \"9229\"; else echo \"${DEBUG_PORT}\"; fi` --type-check --no-deps --no-cache src/app",
    "start-d": "ts-node-dev --inspect=`if [ -z \"${DEBUG_PORT}\" ]; then echo \"9229\"; else echo \"${DEBUG_PORT}\"; fi` --inspect-brk --type-check --no-deps --no-cache src/app",
    "lint": "./node_modules/.bin/tslint --project tsconfig.json src/**/*.ts",
    "test": "npm run jest",
    "test:e2e": "jest --runInBand e2e_tests/*.test.ts",
    "jest": "jest --coverage",
    "build": "tsc",
    "reinstall": "rm -rf node_modules && npm install",
    "reinstall:hard": "rm -f package-lock.json && npm run reinstall"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limenutt/ts-node-starter.git"
  },
  "author": {
    "name": "Mikhail Asavkin",
    "email": "limenutt@gmail.com.au"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/limenutt/ts-node-starter/issues"
  },
  "homepage": "https://github.com/limenutt/ts-node-starter#readme",
  "dependencies": {
    "@types/node": "^10.9.4",
    "reflect-metadata": "^0.1.12",
    "source-map-support": "^0.5.9",
    "uuid": "^3.2.1",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/source-map-support": "^0.4.1",
    "jest": "^24.8.0",
    "ts-jest": "^23.1.4",
    "ts-node-dev": "^1.0.0-pre.39",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "tslint-strict-null-checks": "^1.0.1",
    "typescript": "^3.5.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ]
  }
}
